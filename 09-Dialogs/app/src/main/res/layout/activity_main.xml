<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    >

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btnAlertDialog"
        android:text="@string/abrir_alertdialog"
        android:onClick="abrirAlertDialog"

        />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btnProcessDialog"
        android:text="@string/abrir_progessdialog"
        android:onClick="abrirProgressDialog"
        android:layout_below="@id/btnAlertDialog"

        />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btnDatepickerDialog"
        android:text="@string/abrir_datepicker_dialog"
        android:onClick="abrirDatepickerDialog"
        android:layout_below="@id/btnProcessDialog"
        />
</RelativeLayout>

